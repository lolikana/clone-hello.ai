---
const { class: subscribe__btn_span, ...rest } = Astro.props;
---

<form action="/subscribe" method="post" class="footer__newsletter_form">
	<label for="subscribe-email">
		<input
			type="email"
			id="subscribe-email"
			name="subscribe-email"
			placeholder="Enter your mail"
			required
		/>
	</label>
	<button type="submit"><span class={subscribe__btn_span} {...rest}></span></button>
</form>

<style lang="scss">
	.footer__newsletter_form {
		margin-top: 6vw;
		display: flex;
		justify-content: space-between;
		gap: 3vw;

		label {
			width: 100%;
			position: relative;
			&::after {
				content: '';
				height: 1px;
				width: 100%;
				background-color: $__secondary;
				position: absolute;
				bottom: 0.15rem;
				left: 0;
			}
		}

		input {
			padding: 0.5rem 0.75rem;
			width: 100%;
			border: 1px solid transparent;
			border-radius: 0.25rem;

			&::placeholder {
				color: $__tertiary;
			}
			&:focus {
				border: 1px solid $__tertiary;
			}
		}

		button {
			background-color: $__sub;
			min-width: 48px;
			height: 48px;
			border-radius: 1in;
			@extend %flex-center;
			cursor: pointer;

			span {
				transition: all 1s ease;
				overflow: hidden;
				position: relative;
				display: block;
				width: 13px;
				height: 13px;
			}

			span::before,
			span::after {
				content: '';
				background-image: url('@assets/icons/arrow_right_alt_FILL0_wght400_GRAD0_opsz24.svg');
				background-size: cover;
				background-position: center center;
				filter: $__filter_white;
				width: 100%;
				height: 100%;
				position: absolute;
			}
		}
	}

	@media screen and (min-width: 768px) {
		.footer__newsletter_form {
			width: 100%;
			flex: 2;
			margin-top: 0;
		}
	}
</style>
